<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".InsertActivity"
                                             tools:layout_editor_absoluteX="16dp"
                                             tools:layout_editor_absoluteY="81dp">

    <EditText
            android:id="@+id/txtnameU"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="在這裡輸入名字"
            android:inputType="textPersonName"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/genderGroupU"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="15dp"
    />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="43dp"
            android:layout_height="19dp"
            android:text="NAME:"
            android:layout_marginTop="34dp"
            app:layout_constraintEnd_toStartOf="@+id/txtnameU" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="23dp"/>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="58dp"
            android:layout_height="36dp"
            android:text="GENDER:"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/genderGroupU"
            android:layout_marginBottom="57dp" app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="18dp"/>

    <RadioGroup
            android:id="@+id/genderGroupU"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/txtnameU" app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/sprAgeU" android:layout_marginEnd="9dp"
    >

        <RadioButton
                android:id="@+id/radBoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="男"/>

        <RadioButton
                android:id="@+id/radGir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女"/>
    </RadioGroup>

    <TextView
            android:id="@+id/textView6"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:text="AGE:"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/sprAgeU"
            android:layout_marginBottom="54dp" app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="44dp"/>

    <Spinner
            android:id="@+id/sprAgeU"
            android:layout_width="245dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toBottomOf="@+id/genderGroupU" app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/txtTelU" android:layout_marginEnd="17dp"
    />

    <TextView
            android:id="@+id/textView7"
            android:layout_width="27dp"
            android:layout_height="19dp"
            android:text="TEL:"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toStartOf="@+id/txtTelU"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="33dp"/>

    <EditText
            android:id="@+id/txtTelU"
            android:layout_width="217dp"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="在這裡輸入電話"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/sprAgeU" app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/addressU" android:layout_marginEnd="19dp"
    />

    <Button
            android:id="@+id/btnCan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            app:layout_constraintTop_toBottomOf="@+id/addressU" app:layout_constraintEnd_toStartOf="@+id/btnSave"
            android:layout_marginBottom="41dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="1dp"
    />

    <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            app:layout_constraintStart_toEndOf="@+id/btnCan" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="41dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="6dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:id="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintEnd_toStartOf="@+id/addressU"
            android:layout_marginBottom="135dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
    />
    <EditText
            android:layout_width="228dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addressU"
            android:hint="輸入地址" app:layout_constraintTop_toBottomOf="@+id/txtTelU"
            app:layout_constraintStart_toEndOf="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="31dp" app:layout_constraintBottom_toTopOf="@+id/btnCan"
            android:layout_marginEnd="26dp"/>
</android.support.constraint.ConstraintLayout>